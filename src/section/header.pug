- const nav = [{title: 'Обо мне', href: 'about'}, {title: 'Навыки', href: 'skills'}, {title: 'Работы', href: 'works'}, {title: 'Отзывы', href: 'review'}]
- const social = [{image: 'insta', href: 'about'}, {image: 'github', href: 'skills'}, {image: 'vk', href: 'works'}, {image: 'envelope', href: 'review'}]

section.header
    .header__inner
        .header__logo BA
        ul.nav.nav--header
            each item in nav 
                li.nav__item.nav__item--header
                    a.nav__link.nav__link--header(href=item.href)=item.title
        ul.social.social--header
            each item in social
                li.social__item.social__item--header
                    a.social__link.social__link--header(href=item.href)
                        +icon(item.image, "social__icon social__icon--header")
    .header__info
        h2.header__title Личный сайт
            p веб разработчика
        h1.header__subtitle Владимир 
            p Астаханов

    .scroll 
        span.scroll__item.scroll__item--header Скролл
        +icon('scroll', 'scroll__icon scroll__icon--header')

    .about
        .about__inner
            .about__column
                +image('content/user.jpg', 'about__img')
                .about__info
                    .about__field
                        .about__item Проживаю:
                        .about__item Возраст:
                        .about__item Родился:
                    .about__field
                        .about__item.about__item--white Новосибирск
                        .about__item.about__item--white 27 лет
                        .about__item.about__item--white 1 января 1991
            .about__column
                .about__title Привет, меня зовут
                .about__name Владимир Астаханов
                .about__text Я занимаюсь разработкой современных сайтов и приложений. 
                    p Мне нравится делать интересные и современные проекты.
                .about__subtitle Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!


