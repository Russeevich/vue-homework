.nav {
  display: flex;
  align-items: center;
  &__item {
    margin-left: 60px;
    &:first-child {
      margin-left: 0;
    }
  }
  &__link {
    text-decoration: none;
    font-family: Open Sans;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    line-height: 22px;
    color: #ffffff;
    &--footer {
      white-space: nowrap;
    }
  }
}
